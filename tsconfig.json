{
  "compilerOptions": {
    "forceConsistentCasingInFileNames": true,
    "rootDir": "src",
    "outDir": "lib",
    "target": "es2022",
    "module": "commonjs",
    "declaration": true,
    "composite": true,
    "incremental": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "types": [
      "node",
    ]
  },
  "include": [
    "src"
  ]
}